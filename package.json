{
  "name": "liquibase-plugin",
  "displayName": "liquibase-plugin",
  "description": "VSCode extension for Liquibase integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Liquibase Generator",
      "properties": {
        "liquibaseGenerator.propertiesPath": {
          "type": "string",
          "default": "",
          "description": "Path to liquibase.properties file"
        }
      }
    },
    "commands": [
      {
        "command": "workbench.action.quickOpen",
        "title": "Open Command Palette with Liquibase"
      },
      {
        "command": "liquibaseGenerator.generateSql",
        "title": "Liquibase: Generate SQL for Changeset"
      },
      {
        "command": "liquibaseGenerator.generateSqlFromContext",
        "title": "Liquibase: Generate SQL for Changeset"
      },
      {
        "command": "liquibaseGenerator.setPropertiesPath",
        "title": "Liquibase: Set Properties File Path"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "liquibaseGenerator.generateSqlFromContext",
          "when": "false"
        }
      ],
      "editor/context": [
        {
          "command": "liquibaseGenerator.generateSqlFromContext",
          "group": "liquibase",
          "when": "editorLangId == xml"
        },
        {
          "command": "liquibaseGenerator.generateSqlFromContext",
          "group": "liquibase",
          "when": "editorLangId == yaml"
        }
      ]
    },
    "languages": [
      {
        "id": "xml",
        "aliases": [
          "XML",
          "xml",
          "Liquibase XML"
        ],
        "extensions": [
          ".xml"
        ]
      },
      {
        "id": "yaml",
        "aliases": [
          "YAML",
          "yaml",
          "Liquibase YAML"
        ],
        "extensions": [
          ".yml",
          ".yaml"
        ]
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "tmp": "^0.2.3",
    "xml2js": "^0.6.2"
  }
}
